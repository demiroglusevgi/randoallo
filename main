<body>
    <h1>Random Allocation Game</h1>
    <p id="game-instructions"></p>
    
    <div class="dice" id="dice">50¢</div>
    
    <button class="button" id="roll-die">Roll the Die</button>
    
    <div class="allocation-container">
        <div id="box1" class="allocation-box">
            <div class="box-title" id="box1-title"></div>
            <p id="box1-earnings">$0.00</p>
        </div>
        <div id="box2" class="allocation-box">
            <div class="box-title" id="box2-title"></div>
            <p id="box2-earnings">$0.00</p>
        </div>
    </div>
    
    <div class="result" id="final-score"></div>
    <p id="money-left">Money Left: $10.00</p>
    
    <script>
        let games = 4;
        let currentGame = 1;
        let moneyLeft = 10.00;
        let box1Total = 0.00;
        let box2Total = 0.00;
        let dieRolled = false;
        const gameSettings = [
            { title: "UConn Storrs Campus vs. UConn Stamford Campus", box1: "UConn Storrs Campus", box2: "UConn Stamford Campus" },
            { title: "Self vs. UConn Stamford Campus", box1: "Self", box2: "UConn Stamford Campus" },
            { title: "UConn Stamford Campus vs. Syracuse New York Campus", box1: "UConn Stamford Campus", box2: "Syracuse New York Campus" },
            { title: "Self vs. Syracuse New York Campus", box1: "Self", box2: "Syracuse New York Campus" }
        ];

        function setGameScreen() {
            document.getElementById("game-instructions").innerHTML = `You have $10 to allocate between two groups: ${gameSettings[currentGame - 1].box1} and ${gameSettings[currentGame - 1].box2}. Click "Roll the Die" to determine which group receives the money.`;
            document.getElementById("box1-title").innerText = gameSettings[currentGame - 1].box1;
            document.getElementById("box2-title").innerText = gameSettings[currentGame - 1].box2;
        }

        function rollDie() {
            return Math.random() < 0.5 ? 'box1' : 'box2';
        }

        function updateGame() {
            if (!dieRolled) return;
            const dieResult = rollDie();
            document.getElementById('dice').innerHTML = "50¢";
            document.getElementById('roll-die').disabled = true;

            if (dieResult === 'box1') {
                box1Total += 0.50;
            } else {
                box2Total += 0.50;
            }
        }

        document.getElementById('roll-die').addEventListener('click', function() {
            if (moneyLeft > 0 && !dieRolled) {
                dieRolled = true;
                updateGame();
            }
        });

        function allocateMoney() {
            if (!dieRolled) return;
            moneyLeft -= 0.50;
            document.getElementById('money-left

